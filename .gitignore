# Файлы операционных систем
.DS_Store
Thumbs.db

# Логи и временные файлы
*.log
debug.log

# Папки IDE/редакторов
.idea/
.vscode/

# Зависимости Node.js (если вы будете использовать npm/yarn для сборки CSS/JS в теме/плагине)
node_modules/
npm-debug.log*
yarn-error.log

# Зависимости Composer (если будете использовать)
vendor/
wp-content/vendor/

# Игнорировать специфичные для WordPress папки внутри wp-content
# -----------------------------------------------------------------

# Загруженные пользователем медиафайлы
/wp-content/uploads/

# Файлы обновлений WordPress
/wp-content/upgrade/

# Файлы языковых пакетов
/wp-content/languages/

# Кэш (если будет создаваться плагинами)
/wp-content/cache/

# Игнорировать все темы...
/wp-content/themes/*

# ...КРОМЕ вашей темы 'fr'
!/wp-content/themes/fr/
# (Можно также оставить стандартный index.php, если он нужен)
!/wp-content/themes/index.php

# Игнорировать все плагины...
/wp-content/plugins/*

# ...КРОМЕ вашего плагина 'fr-core' (убедитесь, что имя папки совпадает)
!/wp-content/plugins/fr-core/
# (Игнорируем стандартные плагины, которые могут быть добавлены)
!/wp-content/plugins/index.php
# (Явно игнорируем стандартные, чтобы случайно не добавить)
/wp-content/plugins/akismet/
/wp-content/plugins/hello.php

# Конфигурационные файлы, содержащие секреты (если используете .env)
# .env
# wp-config.php (Обычно не нужен в Git при использовании переменных окружения Docker,
# но если вы его сильно кастомизировали и НЕ храните там пароли - можно добавить.
# Если сомневаетесь - лучше игнорировать)
# /wp-config.php

# Другие файлы, которые могут появиться и не нужны в репозитории
# Например, резервные копии БД, созданные плагинами
*.sql
*.bak